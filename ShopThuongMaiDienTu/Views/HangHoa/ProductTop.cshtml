@model IEnumerable<ShopThuongMaiDienTu.ViewModels.HangHoaVM>

@foreach (var item in Model.Take(3)) // Lấy 3 phần tử đầu tiên
{
    <div class="d-flex align-items-center justify-content-start">
         <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHangHoa">
            <div class="rounded me-4" style="width: 100px; height: 100px;">
                <img img src="~/Hinh/HangHoa/@item.Hinh" class="img-fluid rounded" alt="">
            </div>
         </a>
        
        <div>
            <h6 class="mb-2">
                <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHangHoa">
                    <h4>@item.TenHangHoa</h4>
                </a>
            </h6>
            @{
                var random = new Random();
                int numberOfStars = random.Next(3, 5); // Số sao ngẫu nhiên từ 1 đến 5
            }

            <div class="d-flex mb-2">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= numberOfStars)
                    {
                        <i class="fa fa-star text-secondary"></i>
                    }
                    else
                    {
                        <i class="fa fa-star"></i>
                    }
                }
            </div>
            <div class="d-flex mb-2">
                <h5 class="fw-bold me-2">@item.DonGia $</h5>
                <h5 class="text-danger text-decoration-line-through">@Math.Round(item.DonGia * 1.2, 2) $</h5>
            </div>
        </div>
    </div>

}