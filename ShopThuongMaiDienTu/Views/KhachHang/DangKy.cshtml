@model ShopThuongMaiDienTu.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Dang ky";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Đăng ký tài khoản</p>

                                    <form asp-action="DangKy" asp-controller="KhachHang" enctype="multipart/form-data" class="mx-1 mx-md-4">
                                    <div class="text-danger mx-5" >
                                        @Html.ValidationMessageFor(model => model.MaKh)
                                    </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                       
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <input asp-for="MaKh" name="MaKh" type="text" id="form3Example1c" class="form-control" />
                                            <label class="form-label" asp-for="MaKh" for="form3Example1c"></label>
                                            </div>
                                        </div>
                                    <div class="text-danger mx-5">
                                        @Html.ValidationMessageFor(model => model.HoTen)
                                    </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <input asp-for="HoTen" name="HoTen" type="text" id="form3Example4c" class="form-control" />
                                                <label class="form-label" asp-for="HoTen" for="form3Example4c"></label>
                                            </div>
                                        </div>
                                    <div class="text-danger mx-5">
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <input asp-for="Email" name="Email" type="email" id="form3Example3c" class="form-control" />
                                            <label class="form-label" asp-for="Email" for="form3Example3c"></label>
                                            </div>
                                        </div>
                                    <div class="text-danger mx-5">
                                        @Html.ValidationMessageFor(model => model.MatKhau)
                                    </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <input asp-for="MatKhau" name="MatKhau" type="password" id="form3Example4c" class="form-control" />
                                            <label asp-for="MatKhau" class="form-label" for="form3Example4c"></label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <input asp-for="MatKhau"  type="password" id="form3Example4cd" class="form-control" />
                                            <label asp-for="MatKhau" class="form-label" for="form3Example4cd">Repeat your password</label>
                                            </div>
                                        </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Hinh" name="Hinh" type="file" id="form3Example4cd" class="form-control" />
                                        
                                        </div>
                                    </div>
                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <a asp-action="DangNhap" asp-controller="KhachHang">Đã có tài khoản [Đăng Nhập]</a>
                                    </div>

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <button type="submit" data-mdb--init data-mdb-ripple-init class="btn btn-primary btn-lg">Đăng ký</button>
                                        </div>
                                   

                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
