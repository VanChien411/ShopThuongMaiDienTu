@model IEnumerable<ShopThuongMaiDienTu.ViewModels.MenuLoaiVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh Mục</h4>
      
        <ul class="list-unstyled fruite-categorie">
            @foreach (var item in Model)
            {

                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a aps-controller="HangHoa" asp-action="Index"
                           asp-route-loai="@item.MaLoai">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bag-heart-fill" viewBox="0 0 16 16">
                                <path d="M11.5 4v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m0 6.993c1.664-1.711 5.825 1.283 0 5.132-5.825-3.85-1.664-6.843 0-5.132" />
                            </svg> @item.TenLoai
                        </a>
                        <span>(@item.SoLuong)</span>
                    </div>
                </li>

            }
            
            
        </ul>
    </div>
</div>

